<!DOCTYPE html>
<html>
  <head>
    <title>My App Geekhub</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class='<%= controller.controller_name %>'>
  <div id="banner">
    <%= @page_title || "GeekHub My Store" %>
    <%#= image_tag 'logo.svg', alt: 'The Pragmatic Bookshelf' %>
    <span class="title"><%= @page_title %></span>
    </div>
  <div id="columns">
    <div id="side">
      <ul>
        <li><%= link_to 'Home', store_index_path %></li>
        <li><a href="https://ru.stackoverflow.com/questions/tagged/ruby-on-rails">Questions</a></li>
        <li><a href="http://rubyonrails.org/">News</a></li>
        <li><a href="http://www..../contact">Contact</a></li>
      </ul>
    </div>
    <div id="main">
      <%= yield %>
    </div>
    </div>
  </body>
</html>
